<view>
  <swiper indicator-dots="true" autoplay='true' interval='5000'>
    <swiper-item>
      <image src='/images/wx.png'></image>
    </swiper-item>
    <swiper-item>
      <image src='/images/vr.png'></image>
    </swiper-item>
    <swiper-item>
      <image src='/images/iqiyi.png'></image>
    </swiper-item>
  </swiper>
  <block wx:for="{{postList}}" >
    <view class='new-container' bindtap="onTap">
      <view class='user-title'>
        <image class="user-avatar" src='{{item.avatar}}'></image>
        <text class='user-date'>{{item.date}}</text>
      </view>
      <text class='new-name'>{{item.title}}</text>
      <image class='new-pic' src='{{item.imgSrc}}'></image>
      <text class='new-into'>{{item.content}}</text>
      <view class='user-comment'>
        <image class='like-image' src='/images/icon/chat1.png'></image>
        <text class='like-font'>{{item.reading}}</text>
        <image class='like-image' src='/images/icon/view.png'></image>
        <text class='like-font'>{{item.collection}}</text>
      </view>
    </view>
  </block>

</view>