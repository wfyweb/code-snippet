/**index.wxss**/
page{
  background: #f8f8f8;
}
swiper{
  width:100%;
  height:500rpx;
}
swiper image{
  width: 100%;
  height:100%;
}
.new-container{
  display:flex;
  flex-direction:column;
  margin-top:20rpx;
  margin-bottom:40rpx; 
  width:100%;
  border-top:1px solid #ededed;
  border-bottom:1px solid #ededed;
  background: #fff;
  padding-bottom:5rpx; 
  
}  
.user-title{
  margin:10rpx 0 20rpx 10rpx;
}
.user-avatar{
  width:60rpx;
  height: 60rpx;
  vertical-align: middle;
  
}
.user-date{
  color:#676767;
  font-size: 26rpx;
  vertical-align: middle;
  margin-left:20rpx;
  margin-bottom: 5px;
}
.new-name{
  margin-left:10px;
  margin-bottom: 5px;
  color:#333;
  font-weight:bold;
  font-size: 34rpx;
}
.new-pic{
  width: 100%;
  height: 340rpx;
  margin-bottom: 15px;
}
.new-into{
    color: #666;
    letter-spacing: 2rpx;
    font-size: 28rpx;
    margin-bottom: 20rpx;
    margin-left: 20rpx;
    line-height: 40rpx;
}
.user-comment{
  width: 100%;
  height: 70rpx;
}
.like-image{
  width: 32rpx;
  height: 32rpx;
  margin-left: 24rpx;
  vertical-align: middle;
}
.like-font{
  color: #676767;
  font-size: 28rpx;
  line-height: 32rpx;
  margin-left: 10rpx;
}