/* pages/welcome/welcome.wxss */
page{
  width:100%;
  height:100%;
  background:#b3d4db;
}
.container{
  display:flex;
  flex-direction:column;
  align-items: center;
}
.user-avatar{
  margin-top:160rpx;
  width:200rpx;
  height: 200rpx;
  border-radius: 50%;
}
.user-name{
  margin-top:200rpx;
  font-size:32rpx;
  font-weight:bold;
}
.motto-container{
  margin-top:200rpx;
  text-align: center;
  width:200rpx;
  height:80rpx;
  border-radius: 5px;
  border:1px solid #405f80;
  box-shadow:0 0 5px #405f80; 
  
}
.motto{
  font-size:22rpx;
  font-weight: bold;
  line-height:80rpx;
}
